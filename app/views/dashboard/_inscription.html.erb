<div class="Sign_Form">
	<%= form_for(:member, :url => {:controller => 'members', :action => 'create'}) do |f| %>
	<div class="row">
		<h2 class="center">Nouveau membre</h2>
		<div class="col s8 offset-s2">
			<div class="row">
				<div class="input-field col s6">
					<%= f.text_field :name, class: "validate" %>
					<label>Nom</label>
				</div>
				<div class="input-field col s6">
					<%= f.text_field :firstname%>				
					<label>Pr√©nom</label>
				</div>
			</div>
			<div class="input-field">
					<%= f.text_field :email %>
					<label>Email</label>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<%= f.password_field :password, class: "validate" %>
					<label>Mot de passe</label>
				</div>
				<div class="input-field col s6">
					<%= f.password_field :password_confirmation, class: "validate" %>			
					<label>Confirmation mot de passe</label>
				</div>
			</div>
			<button class="btn waves-effect waves-light orange" type="submit" name="action">Envoyer
				<i class="material-icons right">send</i>
			</button>
		<% end %>
	</div>
	</div>
</div>
