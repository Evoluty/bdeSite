<div class="widget-body">

      <div class="row center">
          <div class="col s6">
            <div class="btn-group"><!-- 1 -->
                <button id="editable-sample-partner_new" class="btn green">
                    Add New <i class="icon-plus"></i>
                </button>
            </div>
          </div>
          <div class="col s6">
            <div class="btn-group pull-right"> <!-- 2 -->
                <a class='dropdown-button btn' href='#' data-activates='dropdownTools3'>Outils</a>
                <ul id='dropdownTools3' class='dropdown-content'>
                  <li><a href="#">Print</a></li>
                  <li><a href="#">Save as PDF</a></li>
                  <li><a href="#">Export to Excel</a></li>
                </ul>
            </div>
          </div>
      </div>


        <table class="table table-striped table-hover table-bordered" id="editable-sample-partner">
            <thead>
            <tr>
                <th data-field="name">Nom du partenaire</th>
                <th data-field="typePartenaire">Type</th>
                <th data-field="adresse">Adresse</th>
                <th data-field="description">Déscription</th>
                <th data-field="logo">Logo</th>
                <th data-field="edit">Editer</th>
                <th data-field="delete">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            <% if @partenaires.size == 0 %>
              <p class="center">Aucun partenaire ajouté, veuillez en insérer un.</p>
            <% else %>
              <% for @partenaire in @partenaires %>
              <tr id="p_<%= @partenaire.id.to_s %>">
                <td><%= @partenaire.nom %></td>
                <td><%= @partenaire.typePartenaire %></td>
                <td><%= @partenaire.adresse %></td>
                <td><%= @partenaire.description %></td>
                <td style="width:30%;">Vide</td>
                <td><a class="edit" href="javascript:;">Editer</a></td>
                <td><a class="delete" id="editable-sample-partner" href="">Supprimer</a></td>
              </tr>
              <% end %>
            <% end %>
        </tbody>
      </table>

</div>
