<div class="center">
	<% if @news.size == 0 %>
		<p class="center">Aucune actualité n'a été publiée ! Utilisez le bouton ci-dessous pour en publier !</p>
	<% else %>
		<table>
	        <thead>
	          <tr>
	              <th data-field="title">Titre</th>
	              <th data-field="text">Texte</th>
	              <th data-field="img">Date de publication</th>
	          </tr>
	        </thead>

	        <tbody>
				<% for @new in @news %>
					<tr>
						<td><%= @new.title %></td>
						<td><%= @new.text %></td>
						<td><%= @new.created_at.strftime("%d-%m-%Y %H:%M") %></td>
						<td><a href="/news/delete/<%= @new.id.to_s %>">Supprimer</a></td>
				<% end %>
			</tbody>
		</table>
	<% end %>
	<br>
	<a class="waves-effect waves-light btn" href="/news/create">Ajouter une actualité</a>
</div>