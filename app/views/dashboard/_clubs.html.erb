<div class="widget-body">

      <div class="row center">
          <div class="col s6">
            <div class="btn-group"><!-- 1 -->
                <button id="editable-sample-club_new" class="btn green">
                    Add New <i class="icon-plus"></i>
                </button>
            </div>
          </div>
          <div class="col s6">
            <div class="btn-group pull-right"> <!-- 2 -->
                <a class='dropdown-button btn' href='#' data-activates='dropdownTools2'>Outils</a>
                <ul id='dropdownTools2' class='dropdown-content'>
                  <li><a href="#">Print</a></li>
                  <li><a href="#">Save as PDF</a></li>
                  <li><a href="#">Export to Excel</a></li>
                </ul>
            </div>
          </div>
      </div>

        <table class="table table-striped table-hover table-bordered" id="editable-sample-club">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Edition</th>
                <th>Suppression</th>
            </tr>
            </thead>
            <tbody>

            <% for @club in @clubs %>
                <tr id="club_<%= @club.id.to_s %>">
                    <td><%= @club.nom %></td>
                    <td><%= @club.description %></td>
                    <td style="width:40%;"><%= @club.image_club %></td>
                    <td><a class="edit" href="javascript:;">Editer</a></td>
                    <td><a class="delete" href="javascript:;">Supprimer</a></td>
                </tr>
            <% end %>
            </tbody>
        </table>
</div>
