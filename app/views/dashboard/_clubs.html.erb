<div class="widget-body">
    <div class="row center">
        <div class="col s6">
          <div class="btn-group"><!-- 1 -->
              <button id="editable-sample-club_new" class="btn green">
                  Add New <i class="icon-plus"></i>
              </button>
          </div>
        </div>
        <div class="col s6">
          <% if @clubs.size != 0 %>
  					<div class="btn-group pull-right"> <!-- 2 -->
  							<a class='dropdown-button btn' href='#' data-activates='dropdownTools4'>Outils</a>
  							<ul id='dropdownTools4' class='dropdown-content'>
  								<li><a href="#">Print</a></li>
  								<li><a href="#">Save as PDF</a></li>
  								<li><a href="#">Export to Excel</a></li>
  							</ul>
  					</div>
  				<% end %>
        </div>
    </div>
      <%= form_tag({controller: "clubs", action: "update"}, target: "myFrame", id: "form_club", enctype: "multipart/form-data") do %>
          <table class="table table-striped table-hover table-bordered" id="editable-sample-club">
              <thead>
              <tr>
                <th data-field="name">Nom du club</th>
                <th data-field="description">Description</th>
                <th data-field="president">Pr√©sident</th>
                <th data-field="photo" style="width:30%;">Photo</th>
                <th data-field="edit">Editer</th>
                <th data-field="delete">Supprimer</th>
              </tr>
              </thead>
              <tbody>
                  <% for @club in @clubs %>
                      <tr id="club_<%= @club.id.to_s %>">
                          <td><%= @club.nom %></td>
                          <td><%= @club.description %></td>
                          <td><%= @club.president %></td>
                          <td style="width:30%;"><img src="<%= @club.image_club.url(:thumb) %>" style="margin-right:5px;vertical-align:middle;"/><span><%= @club.image_club_file_name %></span></td>
                          <td><a class="edit" href="javascript:;">Editer</a></td>
                          <td><a class="delete" id="editable-sample-club" href="">Supprimer</a></td>
                      </tr>
                  <% end %>
      	   </tbody>
          </table>
      <% end %>
    <br>
</div>
