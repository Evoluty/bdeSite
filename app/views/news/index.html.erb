<div class="container">
	<div class="section">
		<div class="row center">
			<%= render "layouts/pagination" %>
		</div>

		<div class="row center">
			<div class="col s8 offset-s2">
				<% for @new in @news %>
					<div class="card blue-grey darken-1">
						<div class="card-content">
							<span class="card-title"><%= @new.title %></span>
							<p class="small italic"><%= @new.created_at.strftime("%d-%m-%Y %H:%M") %></p>
							<p><%= simple_format(@new.text) %></p>
						</div>
					</div>
				<% end %>
			</div>
		</div>

		<div class="row center">
			<%= render "layouts/pagination" %>
		</div>
	</div>
</div>